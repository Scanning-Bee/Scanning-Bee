{
    "name": "scanning_bee",
    "description": "Desktop Application for Scanning Bee",
    "author": "Scanning Bee",
    "version": "0.0.0-local",
    "main": "./modules/main/dist/src/index.js",
    "private": true,
    "engines": {
        "node": "^18.0.0 || ^17.0.0 || ^16.0.0"
    },
    "scripts": {
        "build": "yarn workspaces foreach -ptiv run build",
        "watch": "yarn build && ttsc --build --watch",
        "clean": "rimraf modules/*/dist dist build/code build/output",
        "stag": "webpack serve --config webpack.dev.config.js",
        "dev": "cross-env SCANNING_BEE_DEV_MODE=true yarn run build; yarn run stag",
        "package": "zx build/package.mjs",
        "lint": "eslint \"modules/*/src/**/*.{tsx,ts,jsx,js}\" --cache",
        "format": "eslint \"modules/*/src/**/*.{tsx,ts,jsx,js}\" --cache --fix",
        "typecheck": "ttsc --noEmit",
        "clean:modules": "yarn clean && rimraf modules/*/node_modules node_modules",
        "dev:watch": "yarn run build && concurrently \"yarn run watch\" \"yarn run dev\""
    },
    "build": {
        "appId": "com.scanning_bee.app",
        "productName": "Scanning Bee",
        "copyright": "Copyright Â© 2024 Scanning Bee",
        "artifactName": "Scanning-Bee-${version}-${os}-${arch}.${ext}",
        "directories": {
            "buildResources": "build/assets",
            "app": "./build/code",
            "output": "./build/output"
        },
        "win": {
            "icon": "scanning_bee.ico"
        },
        "mac": {
            "icon": "scanning_bee.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false
        },
        "linux": {
            "icon": "scanning_bee.png"
        },
        "protocols": [
            {
                "name": "Scanning Bee",
                "schemes": [
                    "scanning_bee"
                ],
                "role": "Viewer"
            }
        ]
    },
    "dependencies": {
        "@scanning_bee/ipc-interfaces": "workspace:*",
        "@scanning_bee/main": "workspace:*",
        "@scanning_bee/renderer": "workspace:*",
        "recharts": "^2.12.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@electron/notarize": "^1.2.3",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "concurrently": "^7.2.1",
        "copy-webpack-plugin": "^11.0.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.6.0",
        "electron": "20.3.8",
        "electron-builder": "^23.6.0",
        "electron-rebuild": "^3.2.9",
        "eslint": "^8.32.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-plugin-import": "~2.26.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^7.0.4",
        "ignore": "^5.2.4",
        "javascript-obfuscator": "^4.0.0",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "lint-staged": "^13.0.3",
        "modclean": "^3.0.0-beta.1",
        "node-loader": "^2.0.0",
        "readdirp": "^3.6.0",
        "require-json5": "^1.1.0",
        "rimraf": "^3.0.2",
        "style-loader": "^3.3.1",
        "terser-webpack-plugin": "^5.3.6",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsc-files": "1.1.2",
        "ttypescript": "^1.5.15",
        "typescript": "^4.9.0",
        "typescript-transform-paths": "^3.4.6",
        "webpack": "^5.68.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.7.4",
        "webpack-obfuscator": "^3.5.0",
        "zx": "^7.1.1"
    },
    "resolutions": {
        "types-ramda": "0.29.4"
    },
    "workspaces": [
        "modules/*"
    ],
    "lint-staged": {
        "modules/*/src/**/*.js": [
            "eslint --fix"
        ],
        "modules/*/src/**/*.{tsx,ts}": [
            "tsc-files --noEmit",
            "eslint --fix"
        ]
    }
}
